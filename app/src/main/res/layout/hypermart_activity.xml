<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_view_hypermart"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/hypermart" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_hypermart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_view_hypermart"
        android:background="@drawable/button_shape"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabBackground="@drawable/tab_color_selector">

        <android.support.design.widget.TabItem
            android:text="@string/tab_produk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tab_location"/>

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_hypermart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_view_hypermart">

    </android.support.v4.view.ViewPager>
</RelativeLayout>